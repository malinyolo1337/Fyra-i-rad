@model Fyra_i_rad.Models.AdminViewModel

<h2>Admin Översikt</h2>

<div class="summary">
    <p><strong>Antal spelare:</strong> @Model.AntalSpelare</p>
    <p><strong>Antal spel:</strong> @Model.AntalSpel</p>
    <p><strong>Totalt antal vinster:</strong> @Model.AntalVinster</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Namn</th>
            <th>Vinster</th>
            <th>Förluster</th>
            <th>Åtgärd</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model.Spelare ?? new List<Fyra_i_rad.Models.Spelare>())
        {
            <tr>
                <td>@s.Id</td>
                <td>@s.Namn</td>
                <td>@s.AntalVinster</td>
                <td>@s.AntalFörluster</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger btn-sm">Ta bort</a>
                </td>
            </tr>
        }
    </tbody>
</table>

