@{
    ViewData["Title"] = "Logga in två spelare";
}

<h2>Logga in två spelare</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="LoginTvåSpelare" method="post">
    <div class="row">
        <div class="col-md-6">
            <h4>Spelare 1</h4>
            <div class="form-group">
                <label for="username1">Användarnamn</label>
                <input type="text" name="username1" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="password1">Lösenord</label>
                <input type="password" name="password1" class="form-control" required />
            </div>
        </div>

        <div class="col-md-6">
            <h4>Spelare 2</h4>
            <div class="form-group">
                <label for="username2">Användarnamn</label>
                <input type="text" name="username2" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="password2">Lösenord</label>
                <input type="password" name="password2" class="form-control" required />
            </div>
        </div>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Starta spel</button>
    </div>
</form>
