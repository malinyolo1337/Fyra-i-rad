
@model FyraIRad.Models.SpelarModel

@{
    ViewData["Title"] = "EditSpelar";
}

<h1>Redigera spelare</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditSpelar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="SpelarID" />

            <div class="form-group">
                <label asp-for="Username" class="control-label">Användarnamn</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label">Lösenord</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            
            <div class="form-group mt-3">
                <input type="submit" value="Spara ändringar" class="btn btn-primary" />
                <a asp-action="SelectSpelar" class="btn btn-secondary">Avbryt</a>
            </div>
        </form>
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>

