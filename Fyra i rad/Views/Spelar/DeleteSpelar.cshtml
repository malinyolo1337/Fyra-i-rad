

@model FyraIRad.Models.SpelarModel

@{
    ViewData["Title"] = "DeleteSpelar";
}

<h1>Ta bort spelare</h1>

<h3>Är du säker på att du vill ta bort <strong>@Model.Username</strong>?</h3>
@* <p><strong>SpelarID:</strong> @Model.SpelarID</p> *@

<hr />
<dl class="row">
    <dt class="col-sm-2">Användarnamn</dt>
    <dd class="col-sm-10">@Model.Username</dd>

    <dt class="col-sm-2">Lösenord</dt>
    <dd class="col-sm-10">@Model.Password</dd>
</dl>

<form asp-action="DeleteSpelarConfirmed" method="post">
    <input type="hidden" asp-for="SpelarID" />
    <button type="submit" class="btn btn-danger">Ta bort</button>
    <a asp-action="SelectSpelar" class="btn btn-secondary">Avbryt</a>
</form>






