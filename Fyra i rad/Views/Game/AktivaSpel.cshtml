@model IEnumerable<GameModel>
@{
    ViewData["Title"] = "Aktiva spel";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Msg"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}
@if (TempData["Error"] is string err)
{
    <div class="alert alert-danger">@err</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nytt spel</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Status</th>
         @*    <th>Skapad</th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.SpelID</td>
                <td>@s.Status</td>
                @* <td>@s.Skapad.ToLocalTime()</td> *@
                <td>
                    <a asp-action="Details" asp-route-id="@s.SpelID" class="btn btn-sm btn-outline-secondary">
                        Öppna
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
